<!DOCTYPE html>
<html>

<head>
    <title>Liverpool Cafe</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/views-index.css' />
    <link rel='stylesheet' href='/stylesheets/liverpools-index.css' />
    <link rel='stylesheet' href='/stylesheets/liverpools-favorites.css' />

</head>

<% count=0 %>

    <body>
        <%- include('../partials/header') %>
            <div class="container">
                <% liverpools.forEach(function(p) { %>
                    <% p.favorite.forEach(function(e) { %>
                        <% console.log(e)%>
                            <% console.log(user)%>
                                <% if (e.user.equals(user._id)) { %>
                                    <% if (count===0) { %>
                                        <div class="row">
                                            <div class="playerDiv col-sm">
                                                <div class="player-image">
                                                    <a href="/liverpools/<%=p._id%>">
                                                        <img src="<%=p.img%>" alt="">
                                                    </a>
                                                </div>
                                                <h3>
                                                    <%=p.playerName%>
                                                </h3>
                                                </a>
                                            </div>

                                            <% count=((count+1) % 3) %>
                                                <% } else { %>
                                                    <div class="playerDiv col-sm">
                                                        <div class="player-image">
                                                            <a href="/liverpools/<%=p._id%>">
                                                                <img src="<%=p.img%>" alt="">
                                                            </a>
                                                        </div>
                                                        <h3>
                                                            <%=p.playerName%>
                                                        </h3>
                                                        </a>
                                                    </div>

                                                    <% count=((count+1) % 3) %>
                                                        <% if (count===0) { %>
                                        </div>
                                        <% }} %>
                                            <% } %>

                                                <% })}) %>



            </div>
    </body>

</html>